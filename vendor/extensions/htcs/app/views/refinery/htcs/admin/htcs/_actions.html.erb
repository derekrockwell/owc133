<ul>
  <% if ::Refinery::Htcs::Admin::HtcsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.htcs_admin_htcs_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_htcs_admin_htc_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Htcs::Admin::HtcsController.sortable? && ::Refinery::Htcs::Htc.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Htcs"),
                 refinery.htcs_admin_htcs_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Htcs"),
                 refinery.htcs_admin_htcs_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
