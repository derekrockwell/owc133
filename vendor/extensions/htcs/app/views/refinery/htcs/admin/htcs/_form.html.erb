<%= form_for [refinery, :htcs_admin, @htc] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @htc,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.htcs.admin.htcs.htc'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @htc.name) %>
<% end -%>
