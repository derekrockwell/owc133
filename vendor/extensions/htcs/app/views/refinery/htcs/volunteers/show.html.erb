<div class="flower-header">
</div>

<div class="span3">
  
</div>
 
<div class="span7 offset1">
  <% content_for :body_content_title do %>
  <%= @volunteer.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @volunteer.first_name %>
      <%=raw @volunteer.last_name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="volunteers">
      <% @volunteers.each do |volunteer| %>
        <li>
          <%= link_to "#{volunteer.first_name} #{volunteer.last_name}", refinery.htcs_volunteer_path(volunteer) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
</div>

<div class="span7 offset1">
<% # 2013-03-29 - DECj: Put some action icons here so all they have to remember is /volunteers %>
<br>
<%= link_to 'Main Volunteers Page', '/htcs/volunteers', :class => "btn btn-primary btn-large" %>
<%= link_to 'Work Report', refinery.workreport_path, :class => "btn btn-primary btn-large" %>

</div>
