<div class="span7 offset1">
    <h1>Volunteer Login</h1>
  <%- flash.each do |name, msg| -%>
  <%= content_tag :div, msg, :class => "alert", :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%> 
  <% if volunteer_signed_in? %>
  You are signed in as <%= current_volunteer.email %>. <%=link_to "Sign out", '/volunteers/sign_out', :method => :delete %>.
  <% else %>
  <%= simple_form_for @volunteer, :url => '/volunteers/sign_in' do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <div><%= f.submit "Sign in", :class => "btn btn-primary btn-large" %></div>
  <% end %>
  <% end %>
</div>