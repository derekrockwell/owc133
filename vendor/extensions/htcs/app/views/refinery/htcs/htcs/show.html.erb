<% content_for :body_content_title do %>
  <%= @htc.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @htc.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="htcs">
      <% @htcs.each do |htc| %>
        <li>
          <%= link_to htc.name, refinery.htcs_htc_path(htc) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
