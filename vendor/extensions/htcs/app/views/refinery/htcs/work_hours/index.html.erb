<div class="page_container container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <%= raw @page.content_for(:body) if @page %>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span8 offset1">
            <% if notice %>
            <div class="alert alert-success">
                <%= notice %>
            </div>
            <%end%>
            <% if alert %>
            <div class="alert alert-error">
                <%= alert %>
            </div>
            <%end%>
            <% content_for :body do %>
            <h3>Current Work Hours for <%= current_volunteer.first_name %></h3>

            <table class="table table-striped table-bordered" data-provides="rowlink">
                <tr><th>Category</th><th>Date</th><th>Hours</th><th>Miles</th><th>Delete</th></tr>

                <%= render @work_hours %>

            </table>	

            <%= link_to '/htcs/work_hours/new', :class => "btn" do %>
            <i class="icon-plus"></i> Add another
            <% end %>


            <% end %>


            <%= render '/refinery/content_page' %>


        </div>

    </div>
</div>




