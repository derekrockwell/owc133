<ul>
  <% if ::Refinery::VolunteerCategories::Admin::VolunteerCategoriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.volunteer_categories_admin_volunteer_categories_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_volunteer_categories_admin_volunteer_category_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::VolunteerCategories::Admin::VolunteerCategoriesController.sortable? && ::Refinery::VolunteerCategories::VolunteerCategory.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Volunteer Categories"),
                 refinery.volunteer_categories_admin_volunteer_categories_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Volunteer Categories"),
                 refinery.volunteer_categories_admin_volunteer_categories_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
