<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(volunteer_category) -%>">
  <span class='title'>
    <%= volunteer_category.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.volunteer_categories_volunteer_category_path(volunteer_category),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_volunteer_categories_admin_volunteer_category_path(volunteer_category),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.volunteer_categories_admin_volunteer_category_path(volunteer_category),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => volunteer_category.name),
        :method => :delete %>
  </span>
</li>
