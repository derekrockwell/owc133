<div id="myCarousel" class="carousel slide">

	<!-- Carousel items -->
	<div class="carousel-inner ">
		<div class="active item">
			<div class="row-fluid">
				<div class="span4 offset1">
					<%= raw @page.content_for(:slide1) %>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span4 offset1 pagination-right">
					<%= link_to "Learn More","/what", :class => "btn btn-primary" %>
				</div>
			</div>
		</div>
		<div class="item">
			<div class="row-fluid">
				<div class="span4 offset1">
					<%= raw @page.content_for(:slide2) %>
				</div>
			</div> 
			<div class="row-fluid">
