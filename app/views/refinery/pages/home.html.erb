<div class="flex-container">
  <div class="flexslider">
    <ul class="slides">
      <li class="slider-bg">
       <%= image_tag "slide1.jpg" %>
       <div class="container-fluid carousel-text">
        <div class="row-fluid">
          <div class="span9">
            <%= raw @page.content_for(:slide1) %>
            <div class="row-fluid">
              <div class="span4 offset7">
                <%= link_to "Learn More","/test", :class => "btn btn-primary btn-large btn-block" %>
              </div>            
            </div>
          </div>
        </div>    
      </li>
      <li class= "slider-bg">
        <%= image_tag "slide2.jpg" %>
        <div class="container-fluid carousel-text">
          <div class="row-fluid">
            <div class="span9">
              <%= raw @page.content_for(:slide2) %>
              <div class="row-fluid">
               <div class="span4 offset7">
                <%= link_to "Learn More","/test", :class => "btn btn-primary btn-large btn-block" %>
              </div>       
            </div>
          </div>
        </div>
      </div>
    </li>
    <li class= "slider-bg">
      <%= image_tag "slide3.jpg" %>
      <div class="container-fluid carousel-text">
        <div class="row-fluid">
          <div class="span9">
            <%= raw @page.content_for(:slide3) %>
            <div class="row-fluid">
             <div class="span4 offset7">
              <%= link_to "Learn More","/test", :class => "btn btn-primary btn-large btn-block" %>
            </div>       
          </div>         
        </div>
      </div>
    </div>
  </li>
</ul>
</div>
</div>

<div class="carousel-switches">
  <div class="switches-container container-fluid">
    <div id="switches" class="row-fluid visible-tablet visible-desktop">
      <div class="span4 carousel-switch">
        <%= raw @page.content_for(:what) %>
      </div>
      <div class="span4 carousel-switch">
        <%= raw @page.content_for(:why) %>
      </div>
      <div class="span4 carousel-switch">
        <%= raw @page.content_for(:when) %>
      </div>
    </div>
    <div class="row-fluid visible-phone" %>
      <div class="span4 carousel-switch">
        <%= raw @page.content_for(:slide1) %>
      </div>
      <div class="span4 carousel-switch">
        <%= raw @page.content_for(:slide2) %>
      </div> 
      <div class="span4 carousel-switch">
        <%= raw @page.content_for(:slide3) %>
      </div>
    </div>
  </div>
</div>

  <div class="container-fluid story-wrapper">
    <div class="row-fluid ">
      <div class="span6">
        <div class="row-fluid left-story">
          <div class="span6 story-image">
            <%= image_tag @page.images[0].url, :class => "img-circle" %>
          </div>

          <div class="span6 story">
            <%= raw @page.content_for(:left_story) %>
          </div>
        </div>
      </div>
      <div class="span6 ">
        <div class="row-fluid right-story">      

          <div class="span6 story">
            <%= raw @page.content_for(:right_story) %>
          </div>
          <div class="span6 story-image">
            <%= image_tag @page.images[1].url, :class => "img-circle" %>
          </div>
        </div>
      </div>
    </div>
  </div>


