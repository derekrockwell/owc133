              <div class="span4 offset7">
                <%= link_to "Learn More","/test", :class => "btn btn-primary btn-large btn-block" %>
              </div>            
            </div>
          </div>
        </div>    
      </li>
      <li class= "slider-bg">
        <%= image_tag "slide2.jpg" %>
        <div class="container-fluid carousel-text">
          <div class="row-fluid">
            <div class="span9">
              <%= raw @page.content_for(:slide2) %>
              <div class="row-fluid">
               <div class="span4 offset7">
                <%= link_to "Learn More","/test", :class => "btn btn-primary btn-large btn-block" %>
